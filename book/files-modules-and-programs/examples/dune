(data_only_dirs correct erroneous)

; ------- ext-list --------
(rule
 (alias ext-list)
 (deps
  (source_tree correct/ext-list)
  (package base)
  (package stdio))
 (action
  (run dune build @all --root correct/ext-list)))

(alias
 (name runtest)
 (deps (alias ext-list)))

